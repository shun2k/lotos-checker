<div id="<%= dom_id analysis %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Data:</strong>
    <%= analysis.data %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Times:</strong>
    <%= analysis.times %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this analysis", analysis, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this analysis', edit_analysis_path(analysis), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
