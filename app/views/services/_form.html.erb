<%= form_with(model: @loto7s, url: services_show_path, method: :get, data: { controller: "service-form" }) do |f| %>
  <div class="grid grid-cols-4 gap-4 bg-stone-100 px-2 py-2 font-bold md:grid-cols-5 md:gap-5 lg:grid-cols-6 lg:gap-6">
    <% (1..37).each do | number | %>
      <label class="flex justify-center items-center space-x-3">
        <%= check_box_tag "numbers[]", number, false, {data: { service_form_target: "checkboxes" }, class: "text-sm" } %>
        <span class="number_style text-base md:number_style_md"><%= number %></span>
      </label>
    <% end %>
  </div>

  <div class="py-4">
    <button class="bg-blue-600 hover:bg-blue-500 text-white rounded px-4 py-2 hover:text-green-400">
      <%= f.submit "決定", disabled: true, data: { service_form_target: "submitButton" } %>
    </button>
  </div>
<% end %>  



